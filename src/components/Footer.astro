<style>
  /* ========================================
     üé® VARIABLES CSS (sin cambios)
     ======================================== */
  :root {
    --bg: #0f1724;
    --panel: rgba(255, 255, 255, 0.04);
    --accent-1: #6ee7b7;
    --accent-2: #60a5fa;
    --muted: #9aa6b2;
    --glass-blur: 8px;
    --radius: 14px;
    --transition: 250ms cubic-bezier(0.2, 0.9, 0.3, 1);
    --max-width: 1100px;
    --padding: 1.25rem;
  }

  /* ========================================
     üì¶ CONTENEDOR PRINCIPAL (sin cambios)
     ======================================== */
  .modern-footer {
    box-sizing: border-box;
    width: 100%;
    background: linear-gradient(
      180deg,
      rgba(15, 23, 36, 0.6),
      rgba(7, 10, 15, 0.75)
    );
    color: #e6eef8;
    padding: 2.25rem 1rem;
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: Inter, ui-sans-serif, system-ui, -apple-system, 'Segoe UI',
      Roboto, 'Helvetica Neue', Arial;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* ========================================
     ü™ü INNER CARD (sin cambios)
     ======================================== */
  .footer-inner {
    width: min(96%, var(--max-width));
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.02),
      rgba(255, 255, 255, 0.015)
    );
    border-radius: var(--radius);
    padding: 1rem 1.25rem;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 0.8rem;
    align-items: center;
    box-shadow: 0 6px 18px rgba(2, 6, 23, 0.55),
      inset 0 1px 0 rgba(255, 255, 255, 0.02);
    backdrop-filter: blur(var(--glass-blur)) saturate(1.05);
    border: 1px solid rgba(255, 255, 255, 0.03);
  }

  /* ========================================
     üé® BRAND (sin cambios)
     ======================================== */
  .brand {
    display: flex;
    gap: 0.9rem;
    align-items: center;
  }

  .logo {
    width: 48px;
    height: 48px;
    min-width: 48px;
    min-height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(
      180deg,
      rgba(255, 255, 255, 0.02),
      rgba(255, 255, 255, 0.01)
    );
    box-shadow: 0 3px 10px rgba(2, 6, 23, 0.45);
    border: 1px solid rgba(255, 255, 255, 0.03);
    color: var(--accent-1);
    transition: all var(--transition);
  }

  .logo:hover {
    transform: scale(1.05);
    box-shadow: 0 5px 15px rgba(110, 231, 183, 0.3);
  }

  .brand-text .name {
    margin: 0;
    font-weight: 600;
    letter-spacing: 0.2px;
    font-size: 0.98rem;
    color: #f8fbff;
  }

  .brand-text .tag {
    margin: 0;
    font-size: 0.78rem;
    color: var(--muted);
    margin-top: 2px;
  }

  /* ========================================
     üìù COPYRIGHT (sin cambios)
     ======================================== */
  .footer-copy {
    margin: 0;
    font-size: 0.88rem;
    color: var(--muted);
    justify-self: center;
    text-align: center;
    animation: subtlePulse 6s ease-in-out infinite;
  }

  @keyframes subtlePulse {
    0% {
      opacity: 0.95;
      transform: translateY(0);
    }
    50% {
      opacity: 1;
      transform: translateY(-2px);
    }
    100% {
      opacity: 0.95;
      transform: translateY(0);
    }
  }

  /* ========================================
     üîó CONTACTOS (ajustado a 4 columnas)
     ======================================== */
  .contacts {
    justify-self: end;
    text-align: right;
  }

  .contact-title {
    margin: 0 0 0.5rem 0;
    font-size: 0.85rem;
    font-weight: 500;
    color: #f8fbff;
    letter-spacing: 0.5px;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0.5rem;
    max-width: 180px;
  }

  .contact-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 10px;
    text-decoration: none;
    color: var(--muted);
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.01), rgba(255, 255, 255, 0.005));
    border: 1px solid rgba(255, 255, 255, 0.03);
    box-shadow: 0 2px 8px rgba(2, 6, 23, 0.45);
    transition: all var(--transition);
  }

  .contact-link svg {
    width: 18px;
    height: 18px;
  }

  .contact-link:hover {
    transform: translateY(-2px) scale(1.05);
    color: #0b1020;
    background: linear-gradient(135deg, var(--accent-1), var(--accent-2));
    box-shadow: 0 4px 12px rgba(110, 231, 183, 0.3), 0 0 20px rgba(96, 165, 250, 0.2);
    animation: glow 0.6s ease-in-out;
  }

  @keyframes glow {
    0% { box-shadow: 0 4px 12px rgba(110, 231, 183, 0.3), 0 0 0 rgba(96, 165, 250, 0); }
    50% { box-shadow: 0 4px 12px rgba(110, 231, 183, 0.5), 0 0 20px rgba(96, 165, 250, 0.4); }
    100% { box-shadow: 0 4px 12px rgba(110, 231, 183, 0.3), 0 0 20px rgba(96, 165, 250, 0.2); }
  }

  /* ========================================
     üì± RESPONSIVE (ajustado)
     ======================================== */
  @media (max-width: 720px) {
    .footer-inner {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 1rem;
      padding: 1.2rem 1rem;
    }

    .brand {
      justify-content: center;
    }

    .footer-copy {
      order: 3;
    }

    .contacts {
      justify-self: center;
      order: 2;
      text-align: center;
    }

    .contact-grid {
      grid-template-columns: repeat(4, 1fr);
      max-width: none;
      gap: 0.4rem;
    }
  }

  @media (max-width: 480px) {
    .modern-footer {
      padding: 1.5rem 0.5rem;
    }

    .footer-inner {
      padding: 1rem 0.8rem;
      gap: 0.8rem;
    }

    .brand {
      flex-direction: column;
      gap: 0.5rem;
    }

    .brand-text {
      text-align: center;
    }

    .brand-text .name {
      font-size: 0.9rem;
    }

    .brand-text .tag {
      font-size: 0.72rem;
    }

    .footer-copy {
      font-size: 0.8rem;
    }

    .contact-link {
      width: 32px;
      height: 32px;
    }

    .contact-link svg {
      width: 16px;
      height: 16px;
    }
  }

  /* ========================================
     üåô MODO CLARO (sin cambios)
     ======================================== */
  .modern-footer.light {
    --bg: #f7fafc;
    color: #0b1220;
    --panel: rgba(11, 18, 32, 0.03);
    --muted: #5b6b75;
  }
</style>