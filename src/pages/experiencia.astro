---
// src/pages/experiencia.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/experiencias.css';
import '../styles/global.css';
---
<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<!-- Devicon para íconos de tecnologías -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css">

<Layout title="Experiencia - Portafolio de Uziel Sánchez Marín">
  <Header />
  
  <!-- FONDO ESPACIAL ÉPICO -->
  <div class="space-background" id="spaceBackground">
    <!-- Luna con resplandor -->
    <div class="moon-glow"></div>
    <div class="moon"></div>
    
    <!-- Planetas -->
    <div class="planet planet-1">
      <div class="planet-ring"></div>
    </div>
    <div class="planet planet-2"></div>
    <div class="planet planet-3"></div>
    
    <!-- Nebulosas -->
    <div class="nebula nebula-1"></div>
    <div class="nebula nebula-2"></div>
    
    <!-- Estrellas (se generarán dinámicamente con JS) -->
    <div id="stars-container"></div>
    
    <!-- Asteroides (se generarán dinámicamente) -->
    <div id="asteroids-container"></div>
    
    <!-- Cometas (se generarán dinámicamente) -->
    <div id="comets-container"></div>
    
    <!-- Nave espacial -->
    <div class="spaceship"></div>
    
    <!-- OVNIs -->
    <div class="ufo">
      <div class="ufo-lights">
        <div class="ufo-light"></div>
        <div class="ufo-light"></div>
        <div class="ufo-light"></div>
      </div>
    </div>
    
    <!-- Satélite -->
    <div class="satellite"></div>
  </div>
  
  <main style="position: relative; z-index: 10;">
    <div class="custom-slider">
      <div class="custom-wrapper">
        <div style="background-image: url('/assets/experiencias/portafolioPersonal.jpg')" class="custom-item">
          <div class="custom-item__info">
            <p class="custom-item__year" style="font-size: 18px;"><span>2024 – Actualmente</span></p>
            <p class="custom-item__name" style="font-size: 14px;"><span>Portafolio Personal – Astro + TypeScript + Tailwind</span></p>
          </div>
        </div>
        <div style="background-image: url('/assets/experiencias/servett.png')" class="custom-item">
          <div class="custom-item__info">
            <p class="custom-item__year" style="font-size: 18px;"><span>2025</span></p>
            <p class="custom-item__name" style="font-size: 14px;"><span>Servet – Plataforma Integral de Gestión Empresarial</span></p>
          </div>
        </div>
        <div style="background-image: url('/assets/experiencias/logo.png')" class="custom-item">
          <div class="custom-item__info">
            <p class="custom-item__year" style="font-size: 18px;"><span>2025</span></p>
            <p class="custom-item__name" style="font-size: 14px;">
              <span>Consultoría especializada para desarrolladores de sistemas: web, redes y más</span>
            </p>
          </div>
        </div>
        <div style="background-image: url('/assets/experiencias/tiendaropa.jpg')" class="custom-item">
          <div class="custom-item__info">
            <p class="custom-item__year" style="font-size: 18px;"><span>2025</span></p>
            <p class="custom-item__name" style="font-size: 14px;"><span>Desarrollador de Tienda Online de Ropa</span></p>
          </div>
        </div>
        <div style="background-image: url('/assets/experiencias/portafolioModas.png')" class="custom-item">
          <div class="custom-item__info">
            <p class="custom-item__year" style="font-size: 18px;"><span>2024</span></p>
            <p class="custom-item__name" style="font-size: 14px;"><span>Portafolio de Moda – Adela Ávila Franco</span></p>
          </div>
        </div>
        <div style="background-image: url('/assets/experiencias/venta.jpg')" class="custom-item">
          <div class="custom-item__info">
            <p class="custom-item__year"><span style="font-size: 18px;">2024</span></p>
            <p class="custom-item__name"><span style="font-size: 14px;">Desarrollador de Sistema de Punto de Venta (Proyecto Completo)</span></p>
          </div>
        </div>
        <div style="background-image: url('/assets/experiencias/laboratorio.jpg')" class="custom-item">
          <div class="custom-item__info">
            <p class="custom-item__year" style="font-size: 18px;"><span>2022-2024</span></p>
            <p class="custom-item__name" style="font-size: 14px;"><span>Practicante de Laboratorio de Sistemas Computacionales</span></p>
          </div>
        </div>
        <div style="background-image: url('/assets/experiencias/algoritmo.jpg')" class="custom-item">
          <div class="custom-item__info">
            <p class="custom-item__year"><span style="font-size: 18px;">(2019-2021)</span></p>
            <p class="custom-item__name"><span style="font-size: 14px;">Ingeniero de Software – The Pixel Rocker: Agencia de Publicidad</span></p>
          </div>
        </div>
        <div style="background-image: url('/assets/experiencias/redes.jpg')" class="custom-item">
          <div class="custom-item__info">
            <p class="custom-item__year"><span>2016 – 2018</span></p>
            <p class="custom-item__name"><span>Prácticas Profesionales - DEECSA</span></p>
          </div>
        </div>
        <div style="background-image: url('/assets/experiencias/tecnico.jpg')" class="custom-item">
          <div class="custom-item__info">
            <p class="custom-item__year"><span>2016</span></p>
            <p class="custom-item__name"><span>Administrativo / Soporte Técnico Departamento de Innovación y Tecnología</span></p>
          </div>
        </div>
      </div>
      <div class="custom-arrow custom-arrow-prev">&#10094;</div>
      <div class="custom-arrow custom-arrow-next">&#10095;</div>
    </div>
    
    <p id="contenido"></p>
    
    <div class="atom">
      <div class="center"></div>
      <div class="orbit orbit1">
        <div class="electron elector1"></div>
      </div>
      <div class="orbit orbit2">
        <div class="electron electron2"></div>
      </div>
      <div class="orbit orbit3">
        <div class="electron electron3"></div>
      </div>
    </div>

    <div id="myModal" class="modal">
      <span class="close">&times;</span>
      <img class="modal-content" id="img01" alt="Imagen ampliada">
      <div class="modal-description"></div>
    </div>
  </main>

  <Footer />
  
  <script>
    import '../data/experienciasData.js';
    import '../scripts/experiencias.js';
    import '../scripts/loadingSystem.js';
  </script>
</Layout>