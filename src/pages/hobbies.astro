  <script>
    import { gsap } from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';

    gsap.registerPlugin(ScrollTrigger);

    // Floating Navigation Toggle
    const floatingNav = document.getElementById('floatingNav');
    const floatingNavToggle = document.getElementById('floatingNavToggle');

    floatingNavToggle?.addEventListener('click', () => {
      floatingNav?.classList.toggle('active');
    });

    // Close floating nav when clicking outside
    document.addEventListener('click', (e) => {
      if (floatingNav && !floatingNav.contains(e.target as Node)) {
        floatingNav.classList.remove('active');
      }
    });

    // Close floating nav when clicking on a link
    document.querySelectorAll('.floating-nav-item').forEach(item => {
      item.addEventListener('click', () => {
        floatingNav?.classList.remove('active');
      });
    });

    // Loading Screen with progress
    let loadingProgress = 0;
    const progressBar = document.querySelector('.loading-progress-bar') as HTMLElement;
    const percentageText = document.querySelector('.loading-percentage') as HTMLElement;

    const loadingInterval = setInterval(() => {
      loadingProgress += Math.random() * 15;
      if (loadingProgress >= 100) {
        loadingProgress = 100;
        clearInterval(loadingInterval);
        
        setTimeout(() => {
          gsap.to('#loading-screen', {
            opacity: 0,
            scale: 1.1,
            duration: 0.8,
            ease: 'power4.in',
            onComplete: () => {
              document.getElementById('loading-screen')?.remove();
              gsap.to('#hobbies-content', { opacity: 1, duration: 1 });
              initAnimations();
            }
          });
        }, 500);
      }
      
      if (progressBar) {
        progressBar.style.width = `${loadingProgress}%`;
      }
      if (percentageText) {
        percentageText.textContent = `${Math.floor(loadingProgress)}%`;
      }
    }, 200);

    window.addEventListener('load', () => {
      // Loading completes automatically with the interval above
    });

    function initAnimations() {
      // Title animations
      gsap.utils.toArray('.gsap-title-hobby').forEach((title: any) => {
        gsap.from(title, {
          scrollTrigger: {
            trigger: title,
            start: 'top 80%',
            toggleActions: 'play none none reverse'
          },
          y: 100,
          opacity: 0,
          scale: 0.8,
          duration: 1,
          ease: 'power4.out'
        });
      });

      // Subtitle animations
      gsap.utils.toArray('.gsap-subtitle').forEach((subtitle: any) => {
        gsap.from(subtitle, {
          scrollTrigger: {
            trigger: subtitle,
            start: 'top 85%',
          },
          y: 50,
          opacity: 0,
          duration: 0.8,
          delay: 0.2
        });
      });

      // Cards animations
      gsap.utils.toArray('.hobby-card, .automation-card, .learning-card').forEach((card: any, i: number) => {
        gsap.from(card, {
          scrollTrigger: {
            trigger: card,
            start: 'top 90%',
          },
          y: 60,
          opacity: 0,
          duration: 0.6,
          delay: i * 0.1
        });
      });
    }

    // Carousel functionality
    class Carousel {
      private container!: HTMLElement;
      private slides!: NodeListOf<Element>;
      private indicators!: HTMLElement;
      private caption!: HTMLElement;
      private currentIndex = 0;
      private autoplayInterval: number | null = null;

      constructor(carouselName: string) {
        const carousel = document.querySelector(`[data-carousel="${carouselName}"]`);
        if (!carousel) return;

        this.container = carousel.querySelector('.carousel-container') as HTMLElement;
        this.slides = carousel.querySelectorAll('.carousel-slide');
        this.indicators = carousel.querySelector('.carousel-indicators') as HTMLElement;
        this.caption = document.querySelector(`.carousel-caption[data-carousel="${carouselName}"]`) as HTMLElement;

        this.init();
      }

      private init() {
        this.createIndicators();
        this.updateCarousel(0);
        this.setupControls();
        this.startAutoplay();
      }

      private createIndicators() {
        this.slides.forEach((_, idx) => {
          const dot = document.createElement('button');
          dot.className = 'carousel-dot';
          dot.setAttribute('data-index', idx.toString());
          dot.addEventListener('click', () => this.goToSlide(idx));
          this.indicators.appendChild(dot);
        });
      }

      private setupControls() {
        const carousel = this.container.closest('[data-carousel]');
        if (!carousel) return;

        const prevBtn = carousel.querySelector('.carousel-prev');
        const nextBtn = carousel.querySelector('.carousel-next');

        prevBtn?.addEventListener('click', () => this.navigate(-1));
        nextBtn?.addEventListener('click', () => this.navigate(1));

        // Pause on hover
        carousel.addEventListener('mouseenter', () => this.stopAutoplay());
        carousel.addEventListener('mouseleave', () => this.startAutoplay());
      }

      private navigate(direction: number) {
        const newIndex = (this.currentIndex + direction + this.slides.length) % this.slides.length;
        this.goToSlide(newIndex);
      }

      private goToSlide(index: number) {
        this.currentIndex = index;
        this.updateCarousel(index);
        this.resetAutoplay();
      }

      private updateCarousel(index: number) {
        // Animate slides
        gsap.to(this.container, {
          x: `-${index * 100}%`,
          duration: 0.8,
          ease: 'power3.inOut'
        });

        // Update indicators
        this.indicators.querySelectorAll('.carousel-dot').forEach((dot, idx) => {
          dot.classList.toggle('active', idx === index);
        });

        // Update caption with fade effect
        if (this.caption) {
          const slide = this.slides[index] as HTMLElement;
          const img = slide.querySelector('img');
          const alt = img?.getAttribute('alt') || '';
          
          gsap.to(this.caption, {
            opacity: 0,
            duration: 0.3,
            onComplete: () => {
              this.caption.textContent = alt;
              gsap.to(this.caption, { opacity: 1, duration: 0.3 });
            }
          });
        }

        // Scale effect on slides
        this.slides.forEach((slide, idx) => {
          gsap.to(slide, {
            scale: idx === index ? 1 : 0.85,
            opacity: idx === index ? 1 : 0.5,
            duration: 0.8,
            ease: 'power2.out'
          });
        });
      }

      private startAutoplay() {
        this.stopAutoplay();
        this.autoplayInterval = window.setInterval(() => {
          this.navigate(1);
        }, 5000);
      }

      private stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      private resetAutoplay() {
        this.stopAutoplay();
        this.startAutoplay();
      }
    }

