---
// src/layouts/Layout.astro
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Portafolio de Uziel Sánchez Marín - Ingeniero en Sistemas Computacionales" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/gato.png" />
    <title>{title}</title>
    <link rel="icon" type="image/x-icon" href="/iconoPortafolio.ico" />
  </head>
  <body class="bg-gray-900 text-gray-200 antialiased">
    <slot />
    
    <script>
      import { gsap } from 'gsap';
      import { ScrollTrigger } from 'gsap/ScrollTrigger';
      
      gsap.registerPlugin(ScrollTrigger);

      // Animación de entrada para el hero
      document.addEventListener('astro:page-load', () => {
        gsap.from('.hero-content', {
          opacity: 0,
          y: 30,
          duration: 1.5,
          ease: 'power3.out'
        });
      });
    </script>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>